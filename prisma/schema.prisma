generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Torrent {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  magnetLink     String
  size           String
  type           String?
  additionalNote String?
}